<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PuppyYogaMaui2.ClassesPage"
             Title="ClassesPage"
             Shell.NavBarIsVisible="True">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="âž•"
                     Clicked="OnAddClassClicked"
                     Priority="0"
                     Order="Primary" />
    </ContentPage.ToolbarItems>

    <Grid Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <CollectionView x:Name="ClassesCollectionView"
                        ItemsSource="{Binding Classes}"
                        Grid.Row="1">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" CornerRadius="10" BorderColor="#ccc">
                        <Grid RowSpacing="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Label Text="{Binding Name}"
                                   Grid.Row="0"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="3"
                                   FontAttributes="Bold"/>
                            <Label Text="{Binding Location, StringFormat='Location: {0}'}"
                                   Grid.Row="1"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="3"/>
                            <Label Text="{Binding ScheduleDate, StringFormat='Date: {0:dd/MM/yyyy}'}"
                                   Grid.Row="2"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="3"/>
                            <Label Text="{Binding ScheduleTime, StringFormat='Time: {0:HH:mm}'}"
                                   Grid.Row="3"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="3"/>
                            <Label Text="{Binding Price, StringFormat='Price: {0:C}'}"
                                   Grid.Row="4"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="3"/>
                            <Label Text="{Binding MaxCapacity, StringFormat='Max Capacity: {0}'}"
                                   Grid.Row="5"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="3"/>
                            <Label Text="{Binding Description, StringFormat='Description: {0}'}"
                                   Grid.Row="6"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="3"
                                   LineBreakMode="WordWrap"/>
                            <Label Text="{Binding InstructorName, StringFormat='Instructor: {0}'}"
                                   Grid.Row="7"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="3"/>

                            <Button Text="RezervÄƒ"
                                    Grid.Row="8"
                                    Grid.Column="1"
                                    BackgroundColor="#FAD2D2"
                                    BorderColor="#FFFFFF"
                                    BorderWidth="1"
                                    CornerRadius="20"
                                    TextColor="White"
                                    FontSize="Small"
                                    FontAttributes="Bold"
                                    CommandParameter="{Binding .}"
                                    Clicked="OnReserveButtonClicked"/>
                            <Button Text="View Feedback"
                                    Grid.Row="8"
                                    Grid.Column="2"
                                    BackgroundColor="#FAD2D2"
                                    BorderColor="#FFFFFF"
                                    BorderWidth="1"
                                    CornerRadius="20"
                                    TextColor="White"
                                    FontSize="Small"
                                    FontAttributes="Bold"
                                    CommandParameter="{Binding .}"
                                    Clicked="OnViewFeedbackClicked"/>
                            <Button Text="Add Feedback"
                                    Grid.Row="9"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="2"
                                    BackgroundColor="#FAD2D2"
                                    BorderColor="#FFFFFF"
                                    BorderWidth="1"
                                    CornerRadius="20"
                                    TextColor="White"
                                    FontSize="Small"
                                    FontAttributes="Bold"
                                    CommandParameter="{Binding .}"
                                    Clicked="OnAddFeedbackClicked"/>
                            <Label Text="ðŸ—‘ï¸"
                                   Grid.Row="0"
                                   VerticalOptions="Start"
                                   HorizontalOptions="End"> 
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnDeleteClassTapped"
                              CommandParameter="{Binding .}"/>
                                </Label.GestureRecognizers>
                            </Label>
                        </Grid>
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnClassTapped"/>
                        </Frame.GestureRecognizers>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
